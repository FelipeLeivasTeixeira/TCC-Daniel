<body>
  <%- include('partials/header') %>
  <main class="fade-in">
      <!-- Hero Section -->
      <div class="hero-section" style="background-image: url('/images/front/indexfrente.jpeg');">
          <div>
              <h1>ImportAê</h1>
              <p>Sua plataforma de importação de produtos</p>
              <div class="mt-4">
                  <a href="#" class="btn btn-primary btn-lg mr-2">Sou Cliente</a>
                  <a href="#" class="btn btn-secondary btn-lg">Sou Importador</a>
